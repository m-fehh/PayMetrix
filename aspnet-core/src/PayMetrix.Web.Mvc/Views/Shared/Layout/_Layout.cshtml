@using Abp.Configuration.Startup
@using Abp.Web.Mvc.Alerts
@using Abp.Web.Security.AntiForgery
@using PayMetrix.Web.Resources
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@inject IMultiTenancyConfig MultiTenancyConfig
@inject IWebResourceManager WebResourceManager
@inject IAlertManager AlertManager
@inject ILanguageManager LanguageManager
@{
	AbpAntiForgeryManager.SetCookie(Context);

	var pageTitle = !string.IsNullOrWhiteSpace(ViewBag.Title) ? ViewBag.Title + " / " : "";
	pageTitle += "PayMetrix";
}



<!DOCTYPE html>
<html lang="@LanguageManager.CurrentLanguage.Name">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="x-ua-compatible" content="ie=edge">

	<title>@pageTitle</title>

	<style>
		body {
			font-family: 'Arial', sans-serif;
			background-color: #f5f5f5;
			color: #333;
		}

		.navbar {
			background-color: #00a33e; /* Verde escolhido */
			color: white;
			box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
		}

		.navbar-nav .nav-link {
			color: white;
		}

		.main-sidebar {
			background-color: #ffffff;
			box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
		}

		.sidebar {
			padding: 20px;
		}

		.content-wrapper {
			background-color: #ffffff;
			padding: 20px;
			margin-top: 20px;
			box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
		}

		.main-footer {
			background-color: #00a33e; /* Verde escolhido */
			color: white;
			padding: 10px 0;
			text-align: center;
		}
	</style>


	@await Html.PartialAsync("_Styles.cshtml")
	@RenderSection("styles", required: false)
</head>
<body class="hold-transition sidebar-mini">
	<div class="wrapper">
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="javascript:;"><i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a class="nav-link" asp-controller="Home" asp-action="Index">@L("HomePage")</a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a class="nav-link" asp-controller="About" asp-action="Index">@L("About")</a>
				</li>
			</ul>

			@using PayMetrix.Web.Views.Shared.Components.RightNavbarLanguageSwitch
			@using PayMetrix.Web.Views.Shared.Components.RightNavbarUserArea
			@using PayMetrix.Web.Views.Shared.Components.SideBarMenu;
			@using PayMetrix.Web.Views.Shared.Components.SideBarUserArea;
			@using PayMetrix;
			<ul class="navbar-nav ml-auto">
				@await Component.InvokeAsync(typeof(RightNavbarLanguageSwitchViewComponent))
				@await Component.InvokeAsync(typeof(RightNavbarUserAreaViewComponent))
			</ul>
		</nav>

		<aside class="main-sidebar">
			<div class="sidebar">
				@await Component.InvokeAsync(typeof(SideBarUserAreaViewComponent))
				@await Component.InvokeAsync(typeof(SideBarMenuViewComponent))
			</div>
		</aside>

		<div class="content-wrapper">
			@await Html.PartialAsync("_Alerts.cshtml")
			@RenderBody()
		</div>

		<footer class="main-footer">
			<strong>Copyright &copy; @DateTime.Now.Year <a href="javascript:void(0);">PayMetrix</a>.</strong> All rights reserved.
			<div class="float-right d-none d-sm-inline-block">
				<b>@L("Version")</b> @AppVersionHelper.Version [@AppVersionHelper.ReleaseDate.ToString("yyyyMMdd")]
			</div>
		</footer>
	</div>

	@await Html.PartialAsync("_Scripts.cshtml")
	@RenderSection("scripts", required: false)
	@WebResourceManager.RenderScripts()
</body>
</html>
